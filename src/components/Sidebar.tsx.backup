        {links.map((link) => {
          const active = pathname === link.href;
          return (
            <Link 
              key={link.href} 
              href={link.href} 
              className={`nav-link group ${active ? "nav-link-active" : ""}`}
              role="menuitem"
              aria-current={active ? "page" : undefined}
