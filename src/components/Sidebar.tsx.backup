  { href: "/tasks", label: "Tasks", icon: "☰", color: "text-slate-400", activeColor: "text-indigo-400" },
  { href: "/calendar", label: "Calendar", icon: "◷", color: "text-slate-400", activeColor: "text-amber-400" },
